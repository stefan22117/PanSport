@model RoleEdit
@{
    ViewData["Title"] = "Edit a role";
}

<h1>Edit a role</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group col-4">
                <label class="control-label">Role name</label>
                <input asp-for="RoleName" class="form-control" />
            </div>


            <div class="row">
                <div class="col-6">
                    <h3>Members</h3>
                    <table class="table">
                        <tr>
                            <th>Username</th>
                            <th>Email</th>
                            <th></th>
                        </tr>

                        @foreach (AppUser member in Model.Members)
                        {
                            <tr>
                                <td>@member.UserName</td>
                                <td>@member.Email</td>
                                <td>

                                    <a asp-action="RemoveFromRole"
                                       asp-route-id="@member.Id"
                                       asp-route-roleId="@Model.Role.Id"
                                       class="removeFromRole
                                            btn btn-danger
                                            ">Remove from</a>
                                </td>
                            </tr>
                        }
                    </table>

                </div>
                <div class="col-6">
                    <h3>Non members</h3>
                    <table class="table">
                        <tr>

                            <th>Username</th>
                            <th>Email</th>
                            <th>Current Role</th>
                            <th></th>
                        </tr>
                        @foreach (AppUser nonMember in Model.NonMembers)
                        {
                            <tr>
                                <td>@nonMember.UserName</td>
                                <td>@nonMember.Email</td>
                                <td>ime role</td>
                                <td>
                                    <a asp-action="AddToRole"
                                       asp-route-id="@nonMember.Id"
                                       asp-route-roleId="@Model.Role.Id"
                                       class="addToRole
                                            btn btn-info
                                            ">Add to role</a>
                                </td>
                            </tr>
                        }

                    </table>

                </div>
            </div>




            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

