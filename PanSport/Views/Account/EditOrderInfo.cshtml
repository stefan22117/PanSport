@model OrderInfo

@{
    ViewData["Title"] = "Edit Order Info";
}





    <p class="text-center bg-dark text-light font-italic rounded px-0"
       style="min-width:50px;"
       >Izmena podataka - @User.Identity.Name</p>
<div class="d-flex justify-content-center">
    <form>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="col-form-label" asp-for="Name"></label>
            <input class="form-control" asp-for="Name" />

            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="col-form-label" asp-for="SurName"></label>
            <input class="form-control" asp-for="SurName" />
        </div>

        <div class="form-group row">
            <div class="col-6">
                <label asp-for="Street"></label>
                <input class="form-control" asp-for="Street" />
            </div>

            <div class="col-6">
                <label asp-for="StreetNumber"></label>
                <input class="form-control" asp-for="StreetNumber" />
            </div>
        </div>

        <div class="form-group">
            <label class="col-form-label" asp-for="Phone"></label>
            <input class="form-control" asp-for="Phone" />
        </div>

        <div class="form-group">
            <label class="col-form-label" asp-for="Comment"></label>
            <textarea class="form-control" asp-for="Comment"></textarea>
        </div>
        <div class="d-flex justify-content-center">
            <input class="btn btn-success" type="submit" value="Save"/>
        </div>

    </form>

</div>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
