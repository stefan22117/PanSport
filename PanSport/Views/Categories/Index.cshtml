@model IEnumerable<Category>

@{
    ViewData["Title"] = "Kategorije";
}
<div class="row p-3 bg-dark rounded justify-content-center">

    @if (Model.Count() > 0)
    {


        @foreach (var category in Model)
        {

            <div class="col-3 text-center">
                <a class="btn btn-light text-lg-center cursot-pointer"
           asp-controller="Products"
           asp-action="GetProducts"
           asp-route-category="@category.Slug">
                    <span class="text-dark font-weight-bold my-5">
                        @category.Title
                    </span>
                    </a>
            </div>
        }

    }
    else
    {
        <h2 class="text-secondary font-italic">Nema dodatih proizvoda ove kategorije...</h2>
    }
</div>

